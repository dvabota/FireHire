@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider MaxWidth=@MaxWidth.Medium FullWidth=@true CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<PageTitle>FireHire HR toolset</PageTitle>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo=@Typo.subtitle1 Color=@Color.Inherit>Admin</MudText>
        <MudSpacer />
    
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth=MaxWidth.False>
            @Body
            <MudScrollToTop>
                <MudFab Color="Color.Primary" Icon="@Icons.Filled.KeyboardArrowUp" />
            </MudScrollToTop>
        </MudContainer>
    </MudMainContent>

</MudLayout>

@code
{
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}